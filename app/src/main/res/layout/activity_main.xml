<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostBlack"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">
        <TextView
            android:id="@+id/workingsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/resultsTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:textColor="@color/red"
            android:id="@+id/clearTV"
            android:text="AC" />
        <Button
            style="@style/buttonNumber"
            android:textColor="@color/red"
            android:id="@+id/backTV"
            android:text="âŒ«" />
        <Button
            style="@style/buttonNumber"
            android:text="" />

        <Button
            style="@style/buttonOperator"
            android:id="@+id/divideTV"
            android:text="/" />


    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/sevenTV"
            android:text="7" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/eightTV"
            android:text="8" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/nineTV"
            android:text="9" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/mulTV"
            android:text="X" />


    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/fourTV"
            android:text="4" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/fiveTV"
            android:text="5" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/sixTV"
            android:text="6" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/minusTV"
            android:text="-" />


    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/oneTV"
            android:text="1" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/twoTV"
            android:text="2" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/threeTV"
            android:text="3" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/plusTV"
            android:text="+" />


    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/dotTV"
            android:text="." />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/zeroTV"
            android:text="0" />
        <Button
            style="@style/buttonNumber"
            android:layout_weight="2"
            android:background="@color/orange"
            android:textSize="40sp"
            android:id="@+id/equalTV"
            android:text="=" />



    </LinearLayout>


</LinearLayout>